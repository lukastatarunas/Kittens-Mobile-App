{
    "extends": [
      "airbnb",
      "airbnb/hooks",
      "prettier",
      "prettier/react",
      "plugin:prettier/recommended"
    ],
    "plugins": ["react", "prettier"],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./app.json"
    },
    "globals": {
        "fetch": false
    },
    "rules": {
      "import/no-unresolved": 0,
      "react/jsx-filename-extension": [1, {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }],
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "trailingComma": "all",
          "arrowParens": "avoid",
          "endOfLine": "auto"
        }
      ],
      "no-use-before-define": "off",
      "import/extensions": ["error", "never"],
      "react/prop-types": 0,
      "no-shadow": "off"
    }
}